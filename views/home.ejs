<html>

<head>
    <title><%=title%></title>
<!-- _______________font awesome link for accesing icons___________ -->
    <script src="https://kit.fontawesome.com/52f6d7bc9d.js" crossorigin="anonymous"></script>
<!-- _______________relative link to css file (starting from where already specified in express.static)___________ -->
    <link rel="stylesheet" href="./cssFiles/home.css">
</head>

<body>
    <div id="mainBlock">
        <div class="monospace">
            <h1 id="heading"><i class="fas fa-briefcase"></i> &nbsp;ToDo App</h1>
        </div>
<!--________________________ form which lets user enter work-ToDo from and post it in DB      ______________________________________________   -->

        <form action="/createSlip" method="POST" id="form1">

            <div id="check0" class="monospace">
                <label for="description" id="L1">Description:</label><br>
                <input type="text" id="description" name="description" required><br>
            </div>
            <div id="secBlock">
                <div id="check1" class="monospace">
                    <label for="category" id="L2">Category:</label><br>
                    <input id="category" list="ategoryy" name="category" class="dropBtn" required>

                    <datalist class="dropdown-content" id="ategoryy">
                        <option value="Personal">Personal</option>
                        <option value="Work">Work</option>
                        <option value="Home">Home</option>
                        <option value="Spiritual">Spiritual</option>
                    </datalist>

                </div>

                <div id="check2" class="monospace">
                    <label id="L3" for="date">Due Date:</label><br>
                    <input type="date" id="date" name="date" required pattern="\d{4}-\d{2}-\d{2}" required><br>
                </div>
            </div>

            <div id="btnSubmit" class="monospace">
                <button type="submit" class="buttonStyle"><i class="fas fa-sync"></i>
                    &nbsp;Submit</button></div>
        </form>


<!--________________________ form which lets user delete workSlip from DB on selecting the checkbox and pressing on delete btn ______________________________________________   -->

        <form action="/deleteIT" method="POST">

            <span><input type="submit" id="delBTN" class="buttonStyle monospace" value="Delete"> </span>

            <div>
        <!--_______________ using js here to display workSlip by iterating over it from DB (through variable workList)________________________ -->
                <ul id="set" class="a">
                    <% for(let i of workList){
                    %>
                    <li id="contactSlip">
                        <div id="content">
                            <div id="checkBlock22"><input type="checkbox" name="<%=i.id %>">
                            </div>
                            <div id="descriptionBlock" class="monospace mainTXT"> â€¢ <%=i.description%>
                            </div>
                        </div>
                        <span class="buttonStyle2"></i><%=i.category%> </span>
                        <div class="monospace txt"><i class="fas fa-tired"></i>
                            Due Date: <%=i.date%>
                        </div>
                    </li>
                    <%}%>
                </ul>
            </div>
        </form>
    </div>
<!-- useeeeeeeeee        relative path starting from where u guided to fetch static files and not from root directory<script type="text/javascript" src="../myassets/jsFiles/home.js"></script> -->
</body>
</html>